<?xml version='1.0' encoding='UTF-8'?>
<agent-input clean='true' temporary='true'>
  <variables>
    <variable name='sharedLocation' value='<%= node['nc_tools']['app_dir'] %>/IBMIMShared'/>
    <variable name='installLocation' value='<%= node['nc_tools']['nc_dir'] %>'/>
  </variables>
  <server>
    <!-- Installation location for: -->
    <!--   IBM Tivoli Netcool/OMNIbus -->
    <!--   Netcool/OMNIbus Tool <%= @tool_nam %> -->
    <repository location='file:<%= @tool_dir %>'/>
  </server>
  <profile id='IBM Tivoli Netcool OMNIbus' installLocation='${installLocation}'>
    <!-- Data for IBM Tivoli Netcool/OMNIbus: -->
    <!-- Migrate OMNIbus data -->
    <data key='user.migratedata,com.ibm.tivoli.omnibus.core' value='false'/>
  </profile>
  <install>
    <!-- Netcool/OMNIbus Tool <%= @tool_nam %> <%= @tool_ver %> -->
    <offering profile='IBM Tivoli Netcool OMNIbus' id='com.ibm.tivoli.omnibus.integrations.<%= @tool_nam %>' version='<%= @tool_ver %>' features='<%= @tool_nam %>'/>
  </install>
  <preference name='com.ibm.cic.common.core.preferences.eclipseCache' value='${sharedLocation}'/>
</agent-input>
